### Copy this file to .env.local and customize as needed for local development

# Database provider (used by Prisma): postgresql or sqlite
DATABASE_PROVIDER=postgresql
# Postgres database (used by Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nextstrap_dev?schema=public"

# NextAuth secret (override in production)
NEXTAUTH_SECRET=your_nextauth_secret

# SMTP settings (MailHog default)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=nextstrap@example.com

# NextAuth URL (base URL for callbacks)
NEXTAUTH_URL=http://localhost:3000

# OAuth provider for GarageAuth (if used)
GARAGE_AUTH_CLIENT_ID=your_client_id
GARAGE_AUTH_CLIENT_SECRET=your_client_secret

# Application name shown in navbar
NEXT_PUBLIC_APP_NAME=nextstrap