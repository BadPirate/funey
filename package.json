{
  "name": "nextstrap",
  "version": "2025.1.31",
  "private": true,
  "scripts": {
    "db:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.dev.yml down -v",
    "dev": "yarn db:up && npx wait-on tcp:localhost:5432 && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nextstrap_dev?schema=public yarn prisma generate && npx wait-on tcp:localhost:5432 && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nextstrap_dev?schema=public yarn prisma db push && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nextstrap_dev?schema=public SMTP_HOST=localhost SMTP_PORT=1025 NEXTAUTH_URL=http://localhost:3000 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "prisma:generate": "prisma generate",
    "postinstall": "playwright install",
    "test:up": "docker compose -f docker-compose.test.yml up -d db mailhog test-server && npx wait-on tcp:localhost:3000",
    "test:e2e": "npx playwright test --forbid-only --max-failures=1",
    "test:down": "docker compose -f docker-compose.test.yml down -v",
    "test": "bash scripts/test-all.sh"
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "next": "^15.3.1",
    "next-auth": "^4.24.11",
    "popper.js": "^1.16.1",
    "react": ">=19.0.0",
    "react-bootstrap": "2.10.9",
    "react-dom": ">=19.0.0",
    "reflect-metadata": "0.2.2",
    "@prisma/client": "^6.6.0",
    "nodemailer": "^6.9.4",
    "@next-auth/prisma-adapter": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-next": "^15.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "@playwright/test": "^1.35.0",
    "playwright": "^1.35.0",
    "typescript": "^5.8.3",
    "prisma": "^6.6.0",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1"
  },
  "resolutions": {
    "eslint-plugin-react-hooks": "5.1.0"
  }
}
